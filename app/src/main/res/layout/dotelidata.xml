<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableLayout android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/tablelayout1">
            <TableRow>
                <TextView android:text="ENGLISH" android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"/>
                <TextView android:text="UNICODE" android:layout_weight="1"
                    android:layout_height="fill_parent" android:layout_width="fill_parent"/>
                <TextView android:text="डोटेली" android:layout_weight="1"
                    android:layout_height="fill_parent" android:layout_width="fill_parent"/>
            </TableRow></TableLayout>
        <TextView android:text="get info form database" android:id="@+id/tvdatainfo"
            android:layout_height="fill_parent" android:layout_width="fill_parent"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Send"
        android:id="@+id/buttonSend" />
</LinearLayout>

